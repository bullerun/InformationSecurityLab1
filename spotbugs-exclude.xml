<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Spring DI: бины управляются контейнером, это безопасно -->
    <Match>
        <Class name="~org\.example\.config\..*"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
    
    <Match>
        <Class name="~org\.example\.controller\..*"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- JPA сущности: связи между сущностями требуют хранения ссылок -->
    <Match>
        <Class name="~org\.example\.model\..*"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter>

